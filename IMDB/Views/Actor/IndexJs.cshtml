
@{
    ViewBag.Title = "Actores";
}
<style>
    .btn-space {
        margin-left: -5%;
        background-color: cornflowerblue;
        font-size: large;
    }
</style>
<div ng-app="myApp">
    <div ng-controller="myCtrl" ng-init="GetAllData()" class="divList">
        <h1 class="display-2"></h1>
        <table cellpadding="12" class="table table-bordered table-hover">
            <tr>
                <td>
                    <b>Id</b>
                </td>
                <td>
                    <b>Name</b>
                </td>
                <td>
                    <b>Nationality</b>
                </td>
                <td>
                    <b>Roles</b>
                </td>
                <td>
                    <b>Actions</b>
                </td>
            </tr>
            <tr ng-repeat="actor in actors">
                <td id="actorId">
                    {{actor.Id}}
                </td>
                <td>
                    {{actor.Name}}
                </td>
                <td>
                    {{actor.Nationality}}
                </td>
                <td>
                    <ul ng-repeat="role in actor.Roles">
                        <li> {{role}}</li>
                    </ul>

                </td>
                <td>
                    <input type="button" class="btn btn-info " data-toggle="modal" data-target="#myModal" value="Detail" ng-click="Detail(actor.Id)" />

                    <input type="button" class="btn btn-success" value="Edit" ng-click="edit(actor.Id)" />
                    <input type="button" class="btn btn-danger" value="Delete" ng-click="Delete(actor.Id)" />

                </td>
            </tr>
        </table>
        <div class="form-horizontal" role="form">
            <div class="container">
                <div class="row">
                    <h2>
                        <span id="spn">{{ formTitle }}</span>
                    </h2>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Name:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputName" placeholder="" ng-model="Name">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Nacionality:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputNacionality" placeholder="" ng-model="Nationality">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Birth Date:</label>
                            <div class="col-md-8">
                                <input type="date" class="form-control" id="inputBirthDate" ng-model="DateOfBirth">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <div class="col-md-8">
                                <input type="hidden" class="form-control" id="inputRoles" ng-model="Roles">

                                <input type="button" class="btn btn-light btn-block" value="Roles" ng-click="popRoles()" />
                                <div ng-hide="hideRoles" ng-show="showRoles">
                                    <input class="form-control" type="text" value="" name="MovieRoleTitle" placeholder="Role Name..."  />
                                    <select class="form-control" id="MovieRoleMovie" name="MovieRoleMovie" placeholder="Role movie..." >
                                        <option ng-repeat="movie in movies">{{movie.OriginalTitle}}</option>
                                    </select>
                                </div>  

                            </div>
                        </div>
                    </div>          

                </div>
                    <input type="text" class="form-control" id="inputId" ng-model="Id" style="display:none">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="button" id="btnSave" class="btn btn-primary btn-block" value="Submit" ng-click="PostActor()" />
                        </div>
                    </div>

                </div>
        </div>
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 id="modal-title" class="modal-title">Actor detailed</h4>
                    </div>
                    <div class="modal-body">
                        <p class="lead" id="modal"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

        
    </div>

    </div>


    

    

@{
    ViewBag.Title = "Actores";
}
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/app/ActorApp.js"></script>

