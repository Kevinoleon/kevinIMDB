@model IEnumerable<IMDB.Models.Movie>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="display-1 text-center">Lista de peliculas</h2>

<p class="lead">
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Movie", FormMethod.Get))
    {
        @Html.TextBox("SearchString")<input type="submit" value="Filter" />
    }
</p>
<table class="table lead table-hover ">
    <tr >
        <th >
            @Html.DisplayNameFor(model => model.OriginalTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr >
        <td>
            @Html.DisplayFor(modelItem => item.OriginalTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
